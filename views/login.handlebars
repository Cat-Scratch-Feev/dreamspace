<h2 class="panel__title">log in!</h2>
<!-- two form fields, one with username, one with pass -->
<form action="submit" method="post" class="signup">
  <label for="username">username</label>
  <input type="text" name="username" id="username" required />
  <label for="password">password</label>
  <input type="text" name="password" id="password" required />
  <button type="submit" formmethod="post" class="signup_btn">
    <span class="btn_text">log in</span>
  </button>
</form>
