<div class="page__container">
  <div class="intro__container main__intro">
    <header>
      <!--navigation to be rendered in from handlebars templates conditionally based upon login status -->
      <h1>welcome to
        <span class="bold">somniary</span>, your dreamspace</h1>
    </header>
  </div>
  <!-- empty div to be filled with handlebars templates -->
  <div class="panel">
    <!-- "log in! h3?" -->
    <h2 class="panel__title">log in!</h2>
    <!-- two form fields, one with username, one with pass -->

    <form class="login_form">
      <label for="username">username</label>
      <input type="text" name="username" id="username_login" required />
      <label for="password">password</label>
      <input type="password" name="password" id="password_login" required />
      <button type="submit" class="login_btn">
        <span class="btn_text">log in</span>

      </button>
    </form>

    <!-- sign up link -->
    <a href="/signup">
      <h2 id="reg-request">Need A Dreamspace ?</h2>
      <h5>Register today !</h5>
    </a>
  </div>
</div>

<script
  src="https://kit.fontawesome.com/d14b0991e4.js"
  crossorigin="anonymous"
></script>
<script src="./js/login.js"></script>
<script src="./js/theme.js"></script>